generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
  STAFF
  CLIENT
}

enum SubscriptionTier {
  STARTER
  PROFESSIONAL
  ENTERPRISE
  CUSTOM
}

enum CaseStatus {
  ACTIVE       // 進行中
  PENDING      // 待確認
  COMPLETED    // 已完成
  ARCHIVED     // 已打檔
}

enum CaseCategory {
  CIVIL
  CRIMINAL
  CORPORATE
  FAMILY
  PROPERTY
  IMMIGRATION
  LABOUR
  OTHER
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

enum DocumentType {
  CONTRACT
  EVIDENCE
  CORRESPONDENCE
  COURT_FILING
  TEMPLATE
  OTHER
}

model User {
  id               String          @id @default(cuid())
  name             String?
  email            String          @unique
  passwordHash     String?
  role             UserRole        @default(OWNER)
  locale           String          @default("zh")
  emailVerified    DateTime?
  image            String?
  failedLoginCount Int             @default(0)
  lockedUntil      DateTime?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  
  // Relations
  firmId           String?
  firm             Firm?           @relation(fields: [firmId], references: [id])
  timeEntries      TimeEntry[]
  documentsCreated Document[]      @relation("DocumentCreator")
  messagesCreated  Message[]       @relation("MessageCreator")
  assignedCases    Case[]          @relation("AssignedLawyer")
  accounts         Account[]
  sessions         Session[]

  @@index([email])
  @@index([firmId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Firm {
  id                  String           @id @default(cuid())
  name                String
  registrationNumber  String?          @unique
  address             String?
  phone               String?
  email               String?
  website             String?
  employeeCount       Int?
  subscriptionTier    SubscriptionTier @default(STARTER)
  subscriptionStatus  String           @default("trial") // trial, active, suspended, cancelled
  subscriptionEndsAt  DateTime?
  billingEmail        String?
  taxId               String?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  // Relations
  users               User[]
  clients             Client[]
  cases               Case[]
  invoices            Invoice[]

  @@index([name])
}

model Client {
  id              String   @id @default(cuid())
  firstName       String
  lastName        String
  email           String?
  phone           String?
  alternatePhone  String?
  address         String?
  idNumber        String?  // HKID or passport number
  dateOfBirth     DateTime?
  occupation      String?
  company         String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  firmId          String
  firm            Firm     @relation(fields: [firmId], references: [id])
  cases           Case[]
  messages        Message[]

  @@index([firmId])
  @@index([email])
  @@index([lastName, firstName])
}

model Case {
  id              String       @id @default(cuid())
  caseNumber      String       @unique
  title           String
  description     String?
  category        CaseCategory
  status          CaseStatus   @default(PENDING)
  filingDate      DateTime?
  closingDate     DateTime?
  courtReference  String?
  estimatedBudget Decimal?     @db.Decimal(12, 2)
  actualCost      Decimal?     @db.Decimal(12, 2)
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  firmId          String
  firm            Firm         @relation(fields: [firmId], references: [id])
  clientId        String
  client          Client       @relation(fields: [clientId], references: [id])
  assignedLawyerId String?
  assignedLawyer  User?        @relation("AssignedLawyer", fields: [assignedLawyerId], references: [id])
  
  timeEntries     TimeEntry[]
  documents       Document[]
  invoices        Invoice[]
  messages        Message[]

  @@index([firmId])
  @@index([clientId])
  @@index([assignedLawyerId])
  @@index([status])
  @@index([caseNumber])
}

model TimeEntry {
  id           String   @id @default(cuid())
  date         DateTime
  hours        Decimal  @db.Decimal(5, 2)
  description  String
  hourlyRate   Decimal  @db.Decimal(8, 2)
  totalAmount  Decimal  @db.Decimal(10, 2)
  billable     Boolean  @default(true)
  invoiced     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  caseId       String
  case         Case     @relation(fields: [caseId], references: [id])
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  invoiceId    String?
  invoice      Invoice? @relation(fields: [invoiceId], references: [id])

  @@index([caseId])
  @@index([userId])
  @@index([invoiceId])
  @@index([date])
}

model Document {
  id           String       @id @default(cuid())
  title        String
  fileName     String
  fileSize     Int
  filePath     String
  mimeType     String
  documentType DocumentType @default(OTHER)
  version      Int          @default(1)
  description  String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Relations
  caseId       String
  case         Case         @relation(fields: [caseId], references: [id])
  uploadedById String
  uploadedBy   User         @relation("DocumentCreator", fields: [uploadedById], references: [id])

  @@index([caseId])
  @@index([uploadedById])
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  issueDate     DateTime      @default(now())
  dueDate       DateTime
  paidDate      DateTime?
  status        InvoiceStatus @default(DRAFT)
  subtotal      Decimal       @db.Decimal(12, 2)
  tax           Decimal       @default(0) @db.Decimal(12, 2)
  total         Decimal       @db.Decimal(12, 2)
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  firmId        String
  firm          Firm          @relation(fields: [firmId], references: [id])
  caseId        String?
  case          Case?         @relation(fields: [caseId], references: [id])
  timeEntries   TimeEntry[]

  @@index([firmId])
  @@index([caseId])
  @@index([invoiceNumber])
  @@index([status])
}

model Message {
  id         String   @id @default(cuid())
  subject    String
  body       String
  isRead     Boolean  @default(false)
  sentVia    String   @default("in-app") // in-app, email, sms
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  caseId     String?
  case       Case?    @relation(fields: [caseId], references: [id])
  clientId   String?
  client     Client?  @relation(fields: [clientId], references: [id])
  senderId   String
  sender     User     @relation("MessageCreator", fields: [senderId], references: [id])

  @@index([caseId])
  @@index([clientId])
  @@index([senderId])
  @@index([createdAt])
}