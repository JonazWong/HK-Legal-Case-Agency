generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  STAFF
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         UserRole @default(OWNER)
  firmName     String?
  locale       String   @default("zh")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}